@{
    ViewData["Title"] = "Ingresar";
    Layout = "~/Views/Shared/_Layout - Externo.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div id="first">
                <div class="myform form">
                    <div class="logo mb-3 mt-5">
                        <div class="col-md-12 text-center">
                            <h1>Ingresar</h1>
                        </div>
                    </div>
                    <form action="" method="post" name="login">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email</label>
                            <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Clave</label>
                            <input type="password" name="password" id="password" class="form-control" aria-describedby="emailHelp" placeholder="Clave">
                        </div>
                        <div class="col-md-12 text-center ">
                            <a href="@Url.Action("Inicio", "Home")" class=" btn btn-block mybtn btn-primary tx-tfm">Ingresar</a>
                        </div>
                        <div>
                            <hr>
                        </div>
                        <div class="col-md-12 mb-3">
                            <p class="text-center">
                                <a href="javascript:void();" class="google btn mybtn">
                                    <i class="fa fa-google-plus">
                                    </i> Ingresar con Google
                                </a>
                            </p>
                        </div>
                        <div class="form-group">
                            <p class="text-center">No tienes cuenta? <a href="#" id="signup">Registrate aqui</a></p>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>